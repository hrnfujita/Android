<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightYellow"
    tools:context="com.example.hrnext_1.blackjackcheck1.MainActivity">

    <ImageView
        android:id="@+id/imageViewDroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/androidonskateboard"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewDecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/imageViewDroid"
        android:text=""
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textViewCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewDroid"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCommand"
        android:layout_marginLeft="20dp"
        android:ems="2"
        android:maxLength="2"
        android:inputType="number"
        android:textColor="@color/colorBlack"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonExe"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGreen"
        android:text="実行" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/buttonExe"
        android:layout_alignBottom="@id/buttonExe"
        android:layout_toEndOf="@id/buttonExe"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGreen"
        android:text="クリア" />

</RelativeLayout>

